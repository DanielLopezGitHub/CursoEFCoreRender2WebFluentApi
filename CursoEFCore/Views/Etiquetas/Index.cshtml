@model IEnumerable<Etiqueta>

@{
    ViewData["Title"] = "Etiquetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-3">
    <div class="col-4"><h3>Lista de Etiquetas</h3></div>
    <div class="col-3"><a asp-action="Crear" class="btn btn-primary">Crear nueva Etiqueta</a></div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(e => e.Etiqueta_Id)</th>
                <th>@Html.DisplayNameFor(e => e.Titulo)</th>
                <th>@Html.DisplayNameFor(e => e.Fecha)</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Etiqueta_Id</td>
                    <td>@item.Titulo</td>
                    <td>@item.Fecha</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@item.Etiqueta_Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@item.Etiqueta_Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No Hay Etiquetas</p>
    }
</div>