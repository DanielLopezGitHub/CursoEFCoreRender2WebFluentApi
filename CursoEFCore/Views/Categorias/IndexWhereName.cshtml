@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-3">
    <div class="col-4"><h3>Lista de Categorias</h3></div>
    <div class="col-3"><a asp-action="Crear" class="btn btn-primary">Crear nueva categoria</a></div>
    <div class="col-5">
        <a asp-action="CrearMultipleOpcion2" class="btn btn-secondary">Crear Multiple (2 categorias)</a>
        <br />
        <br />
        <a asp-action="CrearMultipleOpcion5" class="btn btn-secondary">Crear Multiple (5 categorias)</a>
        <br />
        <br />
        <a asp-action="VistaCrearMultipleOpcionFormulario" class="btn btn-secondary">Crear Multiples Categorias en Formulario</a>
        <br />
        <br />
        <a asp-action="BorrarMultiple2" class="btn btn-warning">Borrar Multiple (2 categorias)</a>
        <br />
        <br />
        <a asp-action="BorrarMultiple5" class="btn btn-warning">Borrar Multiple (5 categorias)</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Nombre de Categoria</th>
                <th>Estado</th>
                <th>Fecha de Creacion</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Activo</td>
                    <td>@item.FechaCreacion</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@item.Categoria_Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@item.Categoria_Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No Hay Categorias</p>
    }
</div>