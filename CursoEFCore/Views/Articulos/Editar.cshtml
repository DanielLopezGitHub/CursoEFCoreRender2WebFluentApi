@model CursoEFCore.ViewModels.ArticuloCategoriaVM

@{
    ViewData["Title"] = "Editar Articulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ViewData["Title"]</h3>
<br />
<br />
<form method="post" asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Articulo.Articulo_Id" />

    <div class="mb-3">
        <label asp-for="Articulo.TituloArticulo" for="TituloArticulo" class="form-label">Titulo</label>
        <input asp-for="Articulo.TituloArticulo" type="text" class="form-control" id="TituloArticulo">
        <span asp-validation-for="Articulo.TituloArticulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Articulo.Descripcion" for="Descripcion" class="form-label">Descripcion</label>
        <input asp-for="Articulo.Descripcion" type="text" class="form-control" id="Descripcion">
        <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Fecha" class="form-label">Fecha de Creacion</label>
        <input asp-for="Articulo.Fecha" type="date" class="form-control" id="Fecha" readonly>
        <span asp-validation-for="Articulo.Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input asp-for="Articulo.Email" type="email" class="form-control" id="Email">
        <span asp-validation-for="Articulo.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Calificacion" class="form-label">Calificacion</label>
        <input asp-for="Articulo.Calificacion" type="range" steps="0.01" min="0" max="5" class="form-control" id="Calificacion">
        <span asp-validation-for="Articulo.Calificacion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Articulo.Categoria_Id" for="Categoria" class="form-label">Categoria</label>
        @Html.DropDownListFor(u => u.Articulo.Categoria_Id, Model.ListaCategorias, "--Lista de categorias", new {@class = "form-control"})
        <span asp-validation-for="Articulo.Categoria_Id" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary me-4">Editar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver a Lista</a>

</form>