@model IEnumerable<Usuario>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-3">
    <div class="col-4"><h3>Lista de Usuarios</h3></div>
    <div class="col-3"><a asp-action="Crear" class="btn btn-primary">Crear nuevo Usuario</a></div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(u => u.Id)</th>
                <th>@Html.DisplayNameFor(u => u.Nombre)</th>
                <th>@Html.DisplayNameFor(u => u.Direccion)</th>
                <th>@Html.DisplayNameFor(u => u.Email)</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Direccion</td>
                    <td>@item.Email</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-secondary text-white" asp-action="Detalle" asp-route-id="@item.Id">Detalle</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No Hay Usuarios</p>
    }
</div>